    <head>
        <script src="https://kit.fontawesome.com/ad6a81734d.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="~/css/custom.css" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    </head>
<body>
    <h1>Profile</h1>
    <div class="container" id="info">
        <h4>Name:</h4>
        <div id="Name">

        </div>
        <h4>Email:</h4>
        <div id="Email">

        </div>
        <h4>Phone Number:</h4>
        <div id="phoneNum">

        </div>
        <h4>Birth Date:</h4>
        <div id="bDate">

        </div>
    </div>
    

    <script>
        $(document).ready(function () {

            function getUserInfo(){
                var email = @User.Identity.Name;
                console.log(email);

                $.ajax({
                    type: 'get',
                    datatype: 'json',
                    url: "https://localhost:5001/users/" + email,
                    success: function (results) {
                    var fName = results['firstName'],
                    var lName = results['lastName'],
                    var birth = results['birthDate'],
                    var phone = results['phoneNumber'],
                    }
                })

                console.log(fName);
                console.log(lName);
                console.log(birth);
                console.log(phone);

                if (fName == null) {
                    fName = "N/A";
                }
                if (lName == null) {
                    lName = "N/A";
                }
                if (birth == null) {
                    birth = "N/A";
                }
                if (phone == null) {
                    phone = "N/A";
                }

                $("#Name").append(fName + " " + lName);
                $("#Email").append(email);
                $("#phoneNum").append(phone);
                $("#bDate").append(birth);
           
            }

            window.onload({
                getUserInfo();
            })
        })
            

            
    </script>
</body>
